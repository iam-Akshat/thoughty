<div class="thought w-100 clearfix mt-2 p-1">
    <div class="float-left mr-2">
        <%= image_tag thought.author.profile_pic.variant(:gravity=>"Center", resize: "50x50^", crop: '50x50+0+0') %>
    </div>
    <div>
    <div class="d-flex w-80 justify-content-between">
        <h6> <%= link_to '@'+thought.author.username, user_path(thought.author) %> </h6>
        <p><%= thought.created_at.to_formatted_s(:short)  %></p>
    </div>
        <p class="text-secondary"><%= thought.content %></p>
    </div>
</div>